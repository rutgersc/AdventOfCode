# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.fs]
indent_size = 4
indent_style = space
# fsharp_space_before_parameter=false
fsharp_space_before_lowercase_invocation = true
fsharp_space_before_uppercase_invocation = true
fsharp_space_before_member=true
fsharp_space_before_colon=false
fsharp_space_before_semicolon=true
max_line_length=120
fsharp_max_record_width=90
fsharp_max_function_binding_width=110
fsharp_max_infix_operator_expression=70
fsharp_max_record_number_of_items=2
fsharp_max_value_binding_width=90
fsharp_bar_before_discriminated_union_declaration=false
fsharp_keep_indent_in_branch=true
